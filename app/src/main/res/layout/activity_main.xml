<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@drawable/app_background"
     android:fillViewport="true"
     tools:context=".MainActivity">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="16dp"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:gravity="center"
             android:textSize="24sp"
             android:textColor="#FFFFFF"
             android:text="哈基米加密器"
             android:textStyle="bold" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:background="@drawable/card_background"
             android:padding="16dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:textSize="16sp"
                 android:textColor="#6200EE"
                 android:text="输入文字"
                 android:textStyle="bold" />

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="@drawable/edittext_border"
                 android:gravity="top"
                 android:hint="请输入要加密或解密的文字..."
                 android:minHeight="120dp"
                 android:padding="12dp"
                 android:textColor="#212121"
                 android:inputType="textMultiLine"
                 android:id="@+id/inputText" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:textSize="16sp"
                 android:textColor="#6200EE"
                 android:layout_marginTop="16dp"
                 android:text="哈基米方言（可选）"
                 android:textStyle="bold" />

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="@drawable/edittext_border"
                 android:hint="请输入方言（加密和解密时需一致）"
                 android:padding="12dp"
                 android:textColor="#212121"
                 android:inputType="textPassword"
                 android:id="@+id/passwordEditText" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginTop="8dp">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="#757575"
                     android:id="@+id/charCount"
                     android:text="0 / 无限" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="8dp">

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:layout_marginEnd="4dp"
                         android:background="@drawable/button_secondary"
                         android:textSize="14sp"
                         android:textColor="#6200EE"
                         android:layout_weight="1"
                         android:id="@+id/pasteBtn"
                         android:text="粘贴" />

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:background="@drawable/button_secondary"
                         android:textSize="14sp"
                         android:textColor="#6200EE"
                         android:layout_marginStart="4dp"
                         android:layout_weight="1"
                         android:id="@+id/scanQrBtn"
                         android:text="扫码" />

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:background="@drawable/button_secondary"
                         android:textSize="14sp"
                         android:textColor="#6200EE"
                         android:layout_marginStart="4dp"
                         android:layout_weight="1"
                         android:id="@+id/clearBtn"
                         android:text="清空" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="8dp">

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:layout_marginEnd="4dp"
                         android:background="@drawable/button_secondary"
                         android:textSize="14sp"
                         android:textColor="#6200EE"
                         android:layout_weight="1"
                         android:id="@+id/scanFromGalleryBtn"
                         android:text="相册" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_marginTop="12dp">

                <Button
                     android:layout_height="48dp"
                     android:layout_width="0dp"
                     android:layout_marginEnd="6dp"
                     android:background="@drawable/button_primary"
                     android:textSize="16sp"
                     android:textColor="#FFFFFF"
                     android:layout_weight="1"
                     android:id="@+id/encryptBtn"
                     android:text="加密"
                     android:textStyle="bold" />

                <Button
                     android:layout_height="48dp"
                     android:layout_width="0dp"
                     android:background="@drawable/button_primary"
                     android:textSize="16sp"
                     android:textColor="#FFFFFF"
                     android:layout_marginStart="6dp"
                     android:layout_weight="1"
                     android:id="@+id/decryptBtn"
                     android:text="解密"
                     android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:background="@drawable/card_background"
             android:padding="16dp"
             android:orientation="vertical">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:textColor="#6200EE"
                     android:text="输出结果"
                     android:textStyle="bold" />

                <Space
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:background="@drawable/button_secondary"
                     android:textSize="14sp"
                     android:textColor="#6200EE"
                     android:id="@+id/copyBtn"
                     android:text="复制" />

            </LinearLayout>

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="@drawable/textview_border"
                 android:gravity="center"
                 android:minHeight="120dp"
                 android:padding="12dp"
                 android:textSize="20sp"
                 android:textColor="#212121"
                 android:layout_marginTop="8dp"
                 android:id="@+id/outputText"
                 android:text="加解密结果将显示在这里" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_marginTop="12dp">

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:visibility="gone"
                     android:layout_marginEnd="6dp"
                     android:background="@drawable/button_secondary"
                     android:textSize="14sp"
                     android:textColor="#6200EE"
                     android:layout_weight="1"
                     android:id="@+id/generateQrBtn"
                     android:text="生成二维码" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:background="@drawable/button_secondary"
                     android:textSize="14sp"
                     android:textColor="#6200EE"
                     android:layout_marginStart="6dp"
                     android:layout_weight="1"
                     android:id="@+id/shareBtn"
                     android:text="分享" />

            </LinearLayout>

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:textSize="12sp"
                 android:textColor="#757575"
                 android:layout_marginTop="8dp"
                 android:text="提示：加密时如果设置了方言，解密时必须使用相同方言" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>